<!-- app/views/events/show.html.erb -->

<div class="container">
  <h1 class="my-4"><%= @event.title %></h1>

  <div class="row">
    <div class="col-md-6">
      <p><strong>Date de début :</strong> <%= @event.start_date %></p>
      <p><strong>Durée :</strong> <%= @event.duration %> minutes</p>
      <p><strong>Prix :</strong> <%= number_to_currency(@event.price) %></p>
      <p><strong>Lieu :</strong> <%= @event.location %></p>
      <p><strong>Description :</strong> <%= @event.description %></p>
      <p><strong>Organisateur :</strong> <%= @event.admin.first_name %></p>
      <!-- Ajoutez d'autres informations de l'événement ici -->
    </div>

  </div>
</div>
