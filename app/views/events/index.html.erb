<div class="container blog-container">
  <header class="blog-header py-3">
    <h1 class="blog-title">Événements à venir</h1>
  </header>

  <div class="row">
    <% @events.each_with_index do |event, index| %>
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to event.title, event %></h5>
            <p class="card-text"><%= event.description %></p>
            <p class="card-text">
              Date de début : <%= event.start_date.strftime("%d %B %Y à %H:%M") %><br>
              Lieu : <%= event.location %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
