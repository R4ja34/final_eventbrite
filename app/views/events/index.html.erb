<!-- app/views/events/index.html.erb -->

<div class="jumbotron text-center">
  <h1 class="display-4">Événements à venir</h1>
</div>

<div class="container">
  <% rainbow_colors = ["red", "orange", "yellow", "green", "blue", "indigo", "violet"] %>
  <div class="row">
    <% @events.each_with_index do |event, index| %>
      <div class="col-md-4 mb-4">
        <div class="card" style="background-color: <%= rainbow_colors[index % 7] %>;">
          <div class="card-body text-center" style="background-color: white;">
            <h5 class="card-title"><%= link_to event.title, event %></h5>
            <p class="card-text"><%= event.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
